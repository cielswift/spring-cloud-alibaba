<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.a.dao.ScaUserDao">

    <resultMap type="com.a.entity.ScaUser" id="ScaUserMap">
        <result property="id" column="ID" jdbcType="INTEGER"/>
        <result property="username" column="USERNAME" jdbcType="VARCHAR"/>
        <result property="birthday" column="BIRTHDAY" jdbcType="OTHER"/>
        <result property="deleted" column="DELETED" jdbcType="OTHER"/>
        <result property="sex" column="SEX" jdbcType="OTHER"/>
        <result property="createDate" column="CREATE_DATE" jdbcType="TIMESTAMP"/>
        <result property="updateDate" column="UPDATE_DATE" jdbcType="TIMESTAMP"/>
        <result property="image" column="IMAGE" jdbcType="VARCHAR"/>
        <result property="password" column="PASSWORD" jdbcType="VARCHAR"/>
        <result property="price" column="PRICE" jdbcType="OTHER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="ScaUserMap">
        select
          ID, USERNAME, BIRTHDAY, DELETED, SEX, CREATE_DATE, UPDATE_DATE, IMAGE, PASSWORD, PRICE
        from spring_alibaba.sca_user
        where ID = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="ScaUserMap">
        select
          ID, USERNAME, BIRTHDAY, DELETED, SEX, CREATE_DATE, UPDATE_DATE, IMAGE, PASSWORD, PRICE
        from spring_alibaba.sca_user
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="ScaUserMap">
        select
          ID, USERNAME, BIRTHDAY, DELETED, SEX, CREATE_DATE, UPDATE_DATE, IMAGE, PASSWORD, PRICE
        from spring_alibaba.sca_user
        <where>
            <if test="id != null">
                and ID = #{id}
            </if>
            <if test="username != null and username != ''">
                and USERNAME = #{username}
            </if>
            <if test="birthday != null">
                and BIRTHDAY = #{birthday}
            </if>
            <if test="deleted != null">
                and DELETED = #{deleted}
            </if>
            <if test="sex != null">
                and SEX = #{sex}
            </if>
            <if test="createDate != null">
                and CREATE_DATE = #{createDate}
            </if>
            <if test="updateDate != null">
                and UPDATE_DATE = #{updateDate}
            </if>
            <if test="image != null and image != ''">
                and IMAGE = #{image}
            </if>
            <if test="password != null and password != ''">
                and PASSWORD = #{password}
            </if>
            <if test="price != null">
                and PRICE = #{price}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into spring_alibaba.sca_user(USERNAME, BIRTHDAY, DELETED, SEX, CREATE_DATE, UPDATE_DATE, IMAGE, PASSWORD, PRICE)
        values (#{username}, #{birthday}, #{deleted}, #{sex}, #{createDate}, #{updateDate}, #{image}, #{password}, #{price})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update spring_alibaba.sca_user
        <set>
            <if test="username != null and username != ''">
                USERNAME = #{username},
            </if>
            <if test="birthday != null">
                BIRTHDAY = #{birthday},
            </if>
            <if test="deleted != null">
                DELETED = #{deleted},
            </if>
            <if test="sex != null">
                SEX = #{sex},
            </if>
            <if test="createDate != null">
                CREATE_DATE = #{createDate},
            </if>
            <if test="updateDate != null">
                UPDATE_DATE = #{updateDate},
            </if>
            <if test="image != null and image != ''">
                IMAGE = #{image},
            </if>
            <if test="password != null and password != ''">
                PASSWORD = #{password},
            </if>
            <if test="price != null">
                PRICE = #{price},
            </if>
        </set>
        where ID = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from spring_alibaba.sca_user where ID = #{id}
    </delete>

</mapper>