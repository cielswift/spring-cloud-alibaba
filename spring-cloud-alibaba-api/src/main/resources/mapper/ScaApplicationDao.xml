<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.a.dao.ScaApplicationDao">

    <resultMap type="com.a.entity.ScaApplication" id="ScaApplicationMap">
        <result property="id" column="ID" jdbcType="INTEGER"/>
        <result property="createDate" column="CREATE_DATE" jdbcType="OTHER"/>
        <result property="name" column="NAME" jdbcType="VARCHAR"/>
        <result property="deleted" column="DELETED" jdbcType="INTEGER"/>
        <result property="updateDate" column="UPDATE_DATE" jdbcType="OTHER"/>
        <result property="userId" column="USER_ID" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="ScaApplicationMap">
        select
          ID, CREATE_DATE, NAME, DELETED, UPDATE_DATE, USER_ID
        from spring_alibaba.sca_application
        where ID = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="ScaApplicationMap">
        select
          ID, CREATE_DATE, NAME, DELETED, UPDATE_DATE, USER_ID
        from spring_alibaba.sca_application
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="ScaApplicationMap">
        select
          ID, CREATE_DATE, NAME, DELETED, UPDATE_DATE, USER_ID
        from spring_alibaba.sca_application
        <where>
            <if test="id != null">
                and ID = #{id}
            </if>
            <if test="createDate != null">
                and CREATE_DATE = #{createDate}
            </if>
            <if test="name != null and name != ''">
                and NAME = #{name}
            </if>
            <if test="deleted != null">
                and DELETED = #{deleted}
            </if>
            <if test="updateDate != null">
                and UPDATE_DATE = #{updateDate}
            </if>
            <if test="userId != null">
                and USER_ID = #{userId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into spring_alibaba.sca_application(CREATE_DATE, NAME, DELETED, UPDATE_DATE, USER_ID)
        values (#{createDate}, #{name}, #{deleted}, #{updateDate}, #{userId})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update spring_alibaba.sca_application
        <set>
            <if test="createDate != null">
                CREATE_DATE = #{createDate},
            </if>
            <if test="name != null and name != ''">
                NAME = #{name},
            </if>
            <if test="deleted != null">
                DELETED = #{deleted},
            </if>
            <if test="updateDate != null">
                UPDATE_DATE = #{updateDate},
            </if>
            <if test="userId != null">
                USER_ID = #{userId},
            </if>
        </set>
        where ID = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from spring_alibaba.sca_application where ID = #{id}
    </delete>

</mapper>