<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.a.dao.ScaUserRoleDao">

    <resultMap type="com.a.entity.ScaUserRole" id="ScaUserRoleMap">
        <result property="userId" column="USER_ID" jdbcType="INTEGER"/>
        <result property="roleId" column="ROLE_ID" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="ScaUserRoleMap">
        select
          USER_ID, ROLE_ID
        from spring_alibaba.sca_user_role
        where  = #{}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="ScaUserRoleMap">
        select
          USER_ID, ROLE_ID
        from spring_alibaba.sca_user_role
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="ScaUserRoleMap">
        select
          USER_ID, ROLE_ID
        from spring_alibaba.sca_user_role
        <where>
            <if test="userId != null">
                and USER_ID = #{userId}
            </if>
            <if test="roleId != null">
                and ROLE_ID = #{roleId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="" useGeneratedKeys="true">
        insert into spring_alibaba.sca_user_role(USER_ID, ROLE_ID)
        values (#{userId}, #{roleId})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update spring_alibaba.sca_user_role
        <set>
            <if test="userId != null">
                USER_ID = #{userId},
            </if>
            <if test="roleId != null">
                ROLE_ID = #{roleId},
            </if>
        </set>
        where  = #{}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from spring_alibaba.sca_user_role where  = #{}
    </delete>

</mapper>